<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <include
        android:id="@+id/toolbarIn"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginStart="35dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:text="Escolha quantos adversÃ¡rios deseja enfrentar"
        app:layout_constraintTop_toBottomOf="@id/toolbarIn"/>

    <Button
        android:id="@+id/umVumBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/umvum"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="100dp"
        app:layout_constraintTop_toBottomOf="@id/titulo" />

    <Button
        android:id="@+id/umVdoisBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/umvdois"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/umVumBt" />
</androidx.constraintlayout.widget.ConstraintLayout>